local function createSelfButton(text, color, command)
	local btn = Instance.new("TextButton")
	btn.Text = text
	btn.BackgroundColor3 = color
	btn.TextColor3 = Color3.new(1, 1, 1)
	btn.Font = Enum.Font.GothamBlack
	btn.TextSize = 14
	btn.ZIndex = 6
	btn.Parent = selfCommandsFrame

	local cornerBtn = Instance.new("UICorner")
	cornerBtn.CornerRadius = UDim.new(0, 6)
	cornerBtn.Parent = btn

	local stroke = Instance.new("UIStroke")
	stroke.Thickness = 1
	stroke.Color = Color3.fromRGB(255, 255, 255)
	stroke.Transparency = 0.7
	stroke.Parent = btn

	local tweenInfo = TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
	btn.MouseEnter:Connect(function()
		TweenService:Create(btn, tweenInfo, { Size = UDim2.new(0, 85, 0, 32), BackgroundColor3 = Color3.fromRGB(math.min(color.R * 255 + 50, 255), math.min(color.G * 255 + 50, 255), math.min(color.B * 255 + 50, 255)) }):Play()
	end)
	btn.MouseLeave:Connect(function()
		TweenService:Create(btn, tweenInfo, { Size = UDim2.new(0, 80, 0, 30), BackgroundColor3 = color }):Play()
	end)

	btn.MouseButton1Click:Connect(function()
		task.spawn(function()
			if sendMessage(command, LocalPlayer.Name) then
				local tweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
				statusLabel.Text = "üì§ ‡∏£‡∏±‡∏ô " .. command .. " ‡πÉ‡∏™‡πà‡∏ï‡∏±‡∏ß‡πÄ‡∏≠‡∏á‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!"
				TweenService:Create(statusLabel, tweenInfo, { TextTransparency = 0 }):Play()
				task.wait(3)
				TweenService:Create(statusLabel, tweenInfo, { TextTransparency = 1 }):Play()
				task.wait(0.5)
				statusLabel.Text = "üõ°Ô∏è ‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞: ‡∏£‡∏≠‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á..."
				TweenService:Create(statusLabel, tweenInfo, { TextTransparency = 0 }):Play()
			end
		end)
	end)
end

createSelfButton("‚ùÑÔ∏è :unice", Color3.fromRGB(0, 170, 255), "unice")
createSelfButton("üîì :unjail", Color3.fromRGB(255, 90, 90), "unjail")
createSelfButton("üéÆ :uncontrol", Color3.fromRGB(200, 50, 200), "uncontrol")
createSelfButton("üî• :unfrozen", Color3.fromRGB(255, 150, 50), "unfrozen")

-- ‡πÇ‡∏´‡∏•‡∏î‡∏£‡∏≤‡∏¢‡∏ä‡∏∑‡πà‡∏≠‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô
updatePlayerList()

-- ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏°‡∏µ‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô‡πÄ‡∏Ç‡πâ‡∏≤/‡∏≠‡∏≠‡∏Å
local debounce = false
Players.PlayerAdded:Connect(function()
	if not debounce then
		debounce = true
		task.wait(0.5)
		updatePlayerList()
		debounce = false
	end
end)
Players.PlayerRemoving:Connect(function()
	if not debounce then
		debounce = true
		task.wait(0.5)
		updatePlayerList()
		debounce = false
	end
end)
