	mainFrame.Visible = not isHidden
	miniBtn.Text = isHidden and "‡πÅ‡∏™‡∏î‡∏á üï≥Ô∏è" or "‡∏ã‡πà‡∏≠‡∏ô üï≥Ô∏è"
end)

-- Animation
local animId = "rbxassetid://119713273987479"
local humanoid = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid")
local animator = humanoid and humanoid:FindFirstChild("Animator") or Instance.new("Animator", humanoid)
local anim = Instance.new("Animation")
anim.AnimationId = animId
local track = animator:LoadAnimation(anim)
track.Priority = Enum.AnimationPriority.Action
local speed = 1.0
local distance = 1.0 -- ‡∏£‡∏∞‡∏¢‡∏∞‡∏´‡πà‡∏≤‡∏á‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô 1 ‡∏ö‡∏•‡πá‡∏≠‡∏Å

-- ‡∏õ‡∏∏‡πà‡∏°‡∏õ‡∏£‡∏±‡∏ö‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß‡∏≠‡∏ô‡∏¥‡πÄ‡∏°‡∏ä‡∏±‡∏ô
plusBtn.MouseButton1Click:Connect(function()
	speed = speed + 0.2
	if track.IsPlaying then
		track:AdjustSpeed(speed)
	end
end)

minusBtn.MouseButton1Click:Connect(function()
	speed = math.max(0.2, speed - 0.2)
	if track.IsPlaying then
		track:AdjustSpeed(speed)
	end
end)

-- ‡∏õ‡∏∏‡πà‡∏°‡∏õ‡∏£‡∏±‡∏ö‡∏£‡∏∞‡∏¢‡∏∞‡∏´‡πà‡∏≤‡∏á
distPlusBtn.MouseButton1Click:Connect(function()
	distance = distance + 0.1
	distanceLabel.Text = "‡∏£‡∏∞‡∏¢‡∏∞‡∏´‡πà‡∏≤‡∏á: " .. string.format("%.1f", distance)
end)

distMinusBtn.MouseButton1Click:Connect(function()
	distance = math.max(0, distance - 0.1)
	distanceLabel.Text = "‡∏£‡∏∞‡∏¢‡∏∞‡∏´‡πà‡∏≤‡∏á: " .. string.format("%.1f", distance)
end)

-- ‡∏ï‡∏¥‡∏î‡∏Ç‡πâ‡∏≤‡∏á‡∏´‡∏ô‡πâ‡∏≤‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô (‡∏´‡∏±‡∏ô‡∏´‡∏•‡∏±‡∏á‡πÉ‡∏´‡πâ‡πÄ‡∏õ‡πâ‡∏≤‡∏´‡∏°‡∏≤‡∏¢)
local followConnection
openBtn.MouseButton1Click:Connect(function()
	local target = Players:FindFirstChild(selectedName.Text)
	if target and target.Character and target.Character:FindFirstChild("HumanoidRootPart") and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
		track:Play()
		track:AdjustSpeed(speed)
		if followConnection then followConnection:Disconnect() end
		followConnection = RunService.RenderStepped:Connect(function()
			if target.Character and target.Character:FindFirstChild("HumanoidRootPart") and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
				local targetRoot = target.Character.HumanoidRootPart
				-- ‡∏ß‡∏≤‡∏õ‡πÑ‡∏õ‡∏ï‡∏¥‡∏î‡∏Ç‡πâ‡∏≤‡∏á‡∏´‡∏ô‡πâ‡∏≤‡πÅ‡∏•‡∏∞‡∏´‡∏±‡∏ô‡∏´‡∏•‡∏±‡∏á‡πÉ‡∏´‡πâ (orientation ‡πÄ‡∏î‡∏µ‡∏¢‡∏ß‡∏Å‡∏±‡∏ö‡πÄ‡∏õ‡πâ‡∏≤‡∏´‡∏°‡∏≤‡∏¢)
				LocalPlayer.Character.HumanoidRootPart.CFrame = targetRoot.CFrame * CFrame.new(0, 0, -distance)
			end
		end)
	else
		warn("‚ö†Ô∏è ‡πÑ‡∏°‡πà‡∏û‡∏ö‡πÄ‡∏õ‡πâ‡∏≤‡∏´‡∏°‡∏≤‡∏¢‡∏´‡∏£‡∏∑‡∏≠ Character ‡πÑ‡∏°‡πà‡∏û‡∏£‡πâ‡∏≠‡∏°!")
	end
end)

closeBtn.MouseButton1Click:Connect(function()
	if track.IsPlaying then track:Stop() end
	if followConnection then followConnection:Disconnect() followConnection = nil end
end)

-- ‡∏£‡∏µ‡πÄ‡∏ã‡πá‡∏ï‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏ï‡∏±‡∏ß‡∏•‡∏∞‡∏Ñ‡∏£‡πÄ‡∏Å‡∏¥‡∏î‡πÉ‡∏´‡∏°‡πà
LocalPlayer.CharacterAdded:Connect(function(character)
	humanoid = character:WaitForChild("Humanoid")
	animator = humanoid:FindFirstChild("Animator") or Instance.new("Animator", humanoid)
	track = animator:LoadAnimation(anim)
	track.Priority = Enum.AnimationPriority.Action
end)
