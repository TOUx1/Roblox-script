local systemOn = true
ToggleBtn.MouseButton1Click:Connect(function()
	systemOn = not systemOn
	if systemOn then
		ToggleBtn.Text = "à¸£à¸°à¸šà¸š: à¹€à¸›à¸´à¸” âœ…"
		ToggleBtn.BackgroundColor3 = Color3.fromRGB(50,150,50)
	else
		ToggleBtn.Text = "à¸£à¸°à¸šà¸š: à¸›à¸´à¸” âŒ"
		ToggleBtn.BackgroundColor3 = Color3.fromRGB(150,50,50)
	end
end)

-- à¸›à¸¸à¹ˆà¸¡ à¸•à¸±à¸§à¹€à¸¥à¹‡à¸
local SmallBtn = Instance.new("TextButton", Frame)
SmallBtn.Size = UDim2.new(0.8, 0, 0, 30)
SmallBtn.Position = UDim2.new(0.1, 0, 0.6, 0)
SmallBtn.Text = "à¸•à¸±à¸§à¹€à¸¥à¹‡à¸ ðŸ‘¶"
