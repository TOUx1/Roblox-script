local function setLanguage(lang)
    currentLanguage = lang
    
    if titleLabel then titleLabel.Text = languages[lang].title end
    if dupeTitle then dupeTitle.Text = languages[lang].dupeTitle end
    if amountBox then amountBox.PlaceholderText = languages[lang].amountPlaceholder end
    if dupeButton then dupeButton.Text = languages[lang].startDupe end
    if stealButton then stealButton.Text = languages[lang].stealTool end
    if dropButton then dropButton.Text = languages[lang].dropTool end
    if massTitle then massTitle.Text = languages[lang].massPlayTitle end
    if idBox then idBox.PlaceholderText = languages[lang].idPlaceholder end
    if playButton then playButton.Text = languages[lang].massPlayAudio end
    if settingsTitle then settingsTitle.Text = languages[lang].settingsTitle end
    if statusLabel then statusLabel.Text = languages[lang].statusReady end
    
    print("üåê ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏†‡∏≤‡∏©‡∏≤‡πÄ‡∏õ‡πá‡∏ô: " .. (lang == "‡πÑ‡∏ó‡∏¢" and "‡πÑ‡∏ó‡∏¢" or "English"))
end

