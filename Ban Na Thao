-- LocalScript GUI ‡πÅ‡∏ö‡∏ö‡πÉ‡∏´‡∏°‡πà (Part 1/2)
local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á ScreenGui
local gui = Instance.new("ScreenGui")
gui.Name = "NewCoolGUI"
gui.Parent = player:WaitForChild("PlayerGui")

-- ‡∏Å‡∏£‡∏≠‡∏ö‡∏´‡∏•‡∏±‡∏Å
local main = Instance.new("Frame")
main.Size = UDim2.new(0, 360, 0, 300)
main.Position = UDim2.new(0.3, 0, 0.3, 0)
main.BackgroundColor3 = Color3.fromRGB(25,25,25)
main.BorderSizePixel = 0
main.Active = true
main.Draggable = true
main.Parent = gui

-- Header
local header = Instance.new("TextLabel")
header.Size = UDim2.new(1,0,0,30)
header.BackgroundColor3 = Color3.fromRGB(45,45,45)
header.Text = "üî• TOU MENU üî•"
header.TextColor3 = Color3.fromRGB(255,170,0)
header.Font = Enum.Font.FredokaOne
header.TextSize = 18
header.Parent = main

-- ‡∏õ‡∏∏‡πà‡∏°‡∏ã‡πà‡∏≠‡∏ô/‡πÅ‡∏™‡∏î‡∏á GUI
local toggleBtn = Instance.new("TextButton")
toggleBtn.Size = UDim2.new(0, 80, 0, 25)
toggleBtn.Position = UDim2.new(1, -85, 0, 2)
toggleBtn.BackgroundColor3 = Color3.fromRGB(50,50,50)
toggleBtn.Text = "‚è© ‡∏ã‡πà‡∏≠‡∏ô"
toggleBtn.TextColor3 = Color3.fromRGB(255,255,255)
toggleBtn.Font = Enum.Font.SourceSansBold
toggleBtn.TextSize = 14
toggleBtn.Parent = main

toggleBtn.MouseButton1Click:Connect(function()
	main.Visible = not main.Visible
	toggleBtn.Text = main.Visible and "‚è© ‡∏ã‡πà‡∏≠‡∏ô" or "‚è™ ‡πÅ‡∏™‡∏î‡∏á"
end)

-- ‡πÅ‡∏ñ‡∏ö‡∏î‡πâ‡∏≤‡∏ô‡∏ã‡πâ‡∏≤‡∏¢
local sideBar = Instance.new("Frame")
sideBar.Size = UDim2.new(0, 120, 1, -30)
sideBar.Position = UDim2.new(0,0,0,30)
sideBar.BackgroundColor3 = Color3.fromRGB(40,40,40)
sideBar.BorderSizePixel = 0
sideBar.Parent = main

local function createSideButton(text, y, callback)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(1, -10, 0, 30)
	btn.Position = UDim2.new(0,5,0,y)
	btn.BackgroundColor3 = Color3.fromRGB(70,70,70)
	btn.TextColor3 = Color3.fromRGB(255,255,255)
	btn.Font = Enum.Font.SourceSansBold
	btn.TextSize = 16
	btn.Text = text
	btn.Parent = sideBar
	btn.MouseButton1Click:Connect(callback)
	return btn
end

-- ‡∏Å‡∏£‡∏≠‡∏ö‡πÄ‡∏ô‡∏∑‡πâ‡∏≠‡∏´‡∏≤ ‡∏Ç‡∏ß‡∏≤ (‡∏õ‡∏∏‡πà‡∏°‡πÅ‡∏™‡∏î‡∏á‡∏ï‡∏≤‡∏°‡∏´‡∏°‡∏ß‡∏î)
local contentFrame = Instance.new("Frame")
contentFrame.Size = UDim2.new(1, -120, 1, -30)
contentFrame.Position = UDim2.new(0,120,0,30)
contentFrame.BackgroundColor3 = Color3.fromRGB(35,35,35)
contentFrame.BorderSizePixel = 0
contentFrame.Parent = main

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏ß‡∏≤‡∏£‡πå‡∏õ
local function warpTo(pos)
	if char and hrp then
		hrp.CFrame = CFrame.new(pos)
	end
end

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏õ‡∏∏‡πà‡∏°‡πÉ‡∏ô contentFrame
local function makeContentButton(text, order, callback)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(0, contentFrame.Size.X.Offset - 20, 0, 30)
	btn.Position = UDim2.new(0,10,0,10 + order*40)
	btn.BackgroundColor3 = Color3.fromRGB(70,70,70)
	btn.TextColor3 = Color3.fromRGB(255,255,255)
	btn.Font = Enum.Font.SourceSansBold
	btn.TextSize = 16
	btn.Text = text
	btn.Parent = contentFrame
	btn.MouseButton1Click:Connect(callback)
	return btn
end

-- ‡πÅ‡∏™‡∏î‡∏á‡∏õ‡∏∏‡πà‡∏°‡∏ß‡∏≤‡∏£‡πå‡∏õ
local warpButtons = {
	{"üèπ ‡∏£‡πâ‡∏≤‡∏ô‡∏õ‡∏∑‡∏ô", Vector3.new(495.77, 6.62, 1155.32)},
	{"üëÆ ‡∏™‡∏ñ‡∏≤‡∏ô‡∏µ‡∏ï‡∏≥‡∏£‡∏ß‡∏à", Vector3.new(803.28, 13.27, -32.92)},
	{"üöó ‡∏£‡πâ‡∏≤‡∏ô‡∏£‡∏ñ", Vector3.new(209.14, 6.43, 1176.07)},
	{"üõí ‡∏£‡πâ‡∏≤‡∏ô‡∏Ñ‡πâ‡∏≤", Vector3.new(767.00, 6.55, 174.00)},
	{"üöö ‡∏Ç‡∏ô‡∏™‡πà‡∏á", Vector3.new(26.80, 6.37, -193.39)},
	{"üè• ‡πÇ‡∏£‡∏á‡∏û‡∏¢‡∏≤‡∏ö‡∏≤‡∏•", Vector3.new(-187.00, 6.37, 1453.00)}
}

local warpContentButtons = {}
for i,v in ipairs(warpButtons) do
	table.insert(warpContentButtons, makeContentButton(v[1], i-1, function() warpTo(v[2]) end))
end

-- ‡πÅ‡∏™‡∏î‡∏á‡∏õ‡∏∏‡πà‡∏° Script Auto (‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏õ‡∏∏‡πà‡∏° auto tool)
local autoContentButtons = {}
-- LocalScript GUI ‡πÅ‡∏ö‡∏ö‡πÉ‡∏´‡∏°‡πà (Part 2/2)
-- ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏õ‡∏∏‡πà‡∏°‡∏î‡πâ‡∏≤‡∏ô‡∏ã‡πâ‡∏≤‡∏¢ Script Auto
createSideButton("Script Auto", 40, function()
	-- ‡∏•‡∏ö‡∏õ‡∏∏‡πà‡∏°‡πÄ‡∏Å‡πà‡∏≤‡πÉ‡∏ô contentFrame
	for _, child in ipairs(contentFrame:GetChildren()) do
		if child:IsA("TextButton") then
			child:Destroy()
		end
	end

	-- ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏õ‡∏∏‡πà‡∏°‡∏≠‡∏≠‡πÇ‡∏ï‡πâ‡πÉ‡∏ä‡πâ Tool
	local btnAutoTool = makeContentButton("üëä ‡∏≠‡∏≠‡πÇ‡∏ï‡πâ‡πÉ‡∏ä‡πâ‡∏Ç‡∏≠‡∏á : ‡∏õ‡∏¥‡∏î", 0, function() end)
	local autoToolOn = false

	btnAutoTool.MouseButton1Click:Connect(function()
		autoToolOn = not autoToolOn
		btnAutoTool.Text = autoToolOn and "üëä ‡∏≠‡∏≠‡πÇ‡∏ï‡πâ‡πÉ‡∏ä‡πâ‡∏Ç‡∏≠‡∏á : ‡πÄ‡∏õ‡∏¥‡∏î" or "üëä ‡∏≠‡∏≠‡πÇ‡∏ï‡πâ‡πÉ‡∏ä‡πâ‡∏Ç‡∏≠‡∏á : ‡∏õ‡∏¥‡∏î"
		running = autoToolOn
		if autoToolOn then
			task.spawn(useToolLoop)
		end
	end)
end)

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏õ‡∏∏‡πà‡∏°‡∏î‡πâ‡∏≤‡∏ô‡∏ã‡πâ‡∏≤‡∏¢ Warp
createSideButton("‡∏ß‡∏≤‡∏õ", 5, function()
	-- ‡∏•‡∏ö‡∏õ‡∏∏‡πà‡∏°‡πÄ‡∏Å‡πà‡∏≤‡πÉ‡∏ô contentFrame
	for _, child in ipairs(contentFrame:GetChildren()) do
		if child:IsA("TextButton") then
			child:Destroy()
		end
	end

	-- ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏õ‡∏∏‡πà‡∏°‡∏ß‡∏≤‡∏£‡πå‡∏õ‡∏≠‡∏µ‡∏Å‡∏Ñ‡∏£‡∏±‡πâ‡∏á
	for i,v in ipairs(warpButtons) do
		makeContentButton(v[1], i-1, function() warpTo(v[2]) end)
	end
end)

-- ====== Auto Tool Logic ======
local Players = game:GetService("Players")
local VirtualUser = game:GetService("VirtualUser")
local player = Players.LocalPlayer

local running = false
local currentTool
local cachedRemotes = {}
local cachedFunctions = {}

-- ‡∏¢‡∏¥‡∏á Mouse ‡πÄ‡∏™‡∏°‡∏∑‡∏≠‡∏ô
local function fireMouseClick()
	pcall(function()
		VirtualUser:Button1Down(Vector2.new(0,0), workspace.CurrentCamera and workspace.CurrentCamera.CFrame or CFrame.new())
		task.wait(0.03)
		VirtualUser:Button1Up(Vector2.new(0,0), workspace.CurrentCamera and workspace.CurrentCamera.CFrame or CFrame.new())
	end)
end

-- ‡πÄ‡∏Å‡πá‡∏ö Remote ‡∏Ç‡∏≠‡∏á Tool
local function cacheRemotes(tool)
	cachedRemotes = {}
	cachedFunctions = {}
	if not tool then return end
	for _, d in ipairs(tool:GetDescendants()) do
		if d:IsA("RemoteEvent") then
			table.insert(cachedRemotes, d)
		elseif d:IsA("RemoteFunction") then
			table.insert(cachedFunctions, d)
		end
	end
end

-- Loop ‡πÉ‡∏ä‡πâ Tool
function useToolLoop()
	while running do
		local char = player.Character
		local tool = char and char:FindFirstChildOfClass("Tool")

		if tool ~= currentTool then
			currentTool = tool
			cacheRemotes(currentTool)
		end

		if tool then
			pcall(function() tool:Activate() end)
			fireMouseClick()
			for _, re in ipairs(cachedRemotes) do
				pcall(function() re:FireServer() end)
			end
			for _, rf in ipairs(cachedFunctions) do
				pcall(function() rf:InvokeServer() end)
			end
		end

		task.wait(0.2)
	end
end
