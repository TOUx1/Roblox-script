local colors = {
    BrickColor.new(1013),
    BrickColor.new(331),
    BrickColor.new(1020),
    BrickColor.new(1016),
    BrickColor.new(1009),
    BrickColor.new(106),
    BrickColor.new(1015),
    BrickColor.new(330),
}

local isOn = false

toggleButton.MouseButton1Click:Connect(function()
    isOn = not isOn
    toggleButton.Text = isOn and "‡∏õ‡∏¥‡∏î" or "‡πÄ‡∏õ‡∏¥‡∏î"
    toggleButton.BackgroundColor3 = isOn and Color3.fromRGB(200, 100, 100) or Color3.fromRGB(100, 200, 100)

    if isOn then
        task.spawn(function()
            while isOn do
                for _, color in ipairs(colors) do
                    if not isOn then break end
                    workspace:WaitForChild("DRadio_Script"):WaitForChild("Color"):FireServer(color)
                    task.wait(0.001) -- ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß‡∏ï‡∏£‡∏á‡∏ô‡∏µ‡πâ
                end
            end
        end)
    end
end)


