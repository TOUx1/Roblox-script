--// LocalScript: RBXGeneral Auto Messenger ‚Äî PART 2/3
-- ‡πÉ‡∏ä‡πâ‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£/‡∏ß‡∏±‡∏ï‡∏ñ‡∏∏‡∏à‡∏≤‡∏Å PART 1 ‡∏ó‡∏µ‡πà‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÑ‡∏ß‡πâ‡πÅ‡∏•‡πâ‡∏ß

-- ‡∏´‡∏≤ RBXGeneral ‡∏î‡πâ‡∏ß‡∏¢‡∏Å‡∏≤‡∏£‡∏£‡∏≠‡πÄ‡∏•‡πá‡∏Å‡∏ô‡πâ‡∏≠‡∏¢
local function getGeneralChannel(timeout)
    timeout = timeout or 6
    local t0 = time()
    while time() - t0 < timeout do
        local chs = TextChatService:FindFirstChild("TextChannels")
        if chs then
            local ch = chs:FindFirstChild("RBXGeneral")
            if ch then return ch end
        end
        task.wait(0.25)
    end
    return nil
end

local function sendMessage(msg)
    local ch = getGeneralChannel(1.2)
    if ch then
        local ok,err = pcall(function() ch:SendAsync(msg) end)
        return ok
    end
    return false
end

-- UI helpers
local function setStatus(on)
    StatusDot.BackgroundColor3 = on and THEME.good or THEME.bad
end

local function getQueue()
    local arr = {}
    for _,child in ipairs(List:GetChildren()) do
        if child:IsA("Frame") then
            local lbl = child:FindFirstChildOfClass("TextLabel")
            if lbl and lbl.Text and #lbl.Text > 0 then
                table.insert(arr, lbl.Text)
            end
        end
    end
    return arr
end

local function updateChannelStatus()
    local ch = getGeneralChannel(0.5)
    if ch then
        ChannelStatus.Text = "Channel: RBXGeneral ‚úì"
        ChannelStatus.TextColor3 = THEME.good
    else
        ChannelStatus.Text = "Channel: Not Found ‚úó"
        ChannelStatus.TextColor3 = THEME.bad
    end
end
updateChannelStatus()
task.spawn(function()
    while true do
        updateChannelStatus()
        task.wait(3)
    end
end)

-- Add message (‡∏õ‡∏∏‡πà‡∏° + ‡∏Å‡∏î Enter ‡πÉ‡∏ô‡∏ä‡πà‡∏≠‡∏á)
AddBtn.MouseButton1Click:Connect(function()
    local t = AddBox.Text
    if t and #t > 0 then
        local function makeItem(txt)
            -- ‡πÉ‡∏ä‡πâ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏à‡∏≤‡∏Å PART 1 (‡∏≠‡∏¢‡∏π‡πà‡πÉ‡∏ô‡∏™‡πÇ‡∏Ñ‡∏õ‡πÄ‡∏î‡∏µ‡∏¢‡∏ß‡∏Å‡∏±‡∏ô)
            -- ‡∏ñ‡πâ‡∏≤‡∏™‡∏†‡∏≤‡∏û‡πÅ‡∏ß‡∏î‡∏•‡πâ‡∏≠‡∏°‡πÅ‡∏¢‡∏Å ‡πÉ‡∏´‡πâ‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô makeMessageItem ‡∏°‡∏≤‡πÑ‡∏ß‡πâ‡∏™‡πà‡∏ß‡∏ô‡∏ô‡∏µ‡πâ
        end
        -- ‡πÄ‡∏£‡∏µ‡∏¢‡∏Å‡∏Ç‡∏≠‡∏á PART 1 ‡∏ó‡∏µ‡πà‡∏≠‡∏¢‡∏π‡πà‡πÉ‡∏ô‡∏™‡πÇ‡∏Ñ‡∏õ‡πÄ‡∏î‡∏µ‡∏¢‡∏ß‡∏Å‡∏±‡∏ô
        for _,_ in pairs({1}) do end -- no-op ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏Å‡∏±‡∏ô optimizer ‡∏ö‡∏≤‡∏á‡∏ï‡∏±‡∏ß
        -- ‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÉ‡∏´‡∏°‡πà
        local item = nil
        -- ‡∏Ñ‡πâ‡∏ô‡∏´‡∏≤ makeMessageItem ‡∏à‡∏≤‡∏Å _G ‡πÄ‡∏ú‡∏∑‡πà‡∏≠‡∏ö‡∏≤‡∏á‡πÅ‡∏û‡∏•‡∏ï‡∏ü‡∏≠‡∏£‡πå‡∏°
        if typeof(makeMessageItem) == "function" then
            makeMessageItem(t)
        else
            -- fallback: ‡∏™‡∏£‡πâ‡∏≤‡∏á label ‡πÅ‡∏ö‡∏ö‡∏á‡πà‡∏≤‡∏¢ (‡∏Å‡∏£‡∏ì‡∏µ‡∏ú‡∏π‡πâ‡∏£‡∏±‡∏ô‡∏ï‡∏±‡∏î PART 1)
            local f = Instance.new("TextLabel")
            f.Size = UDim2.new(1,-8,0,36)
            f.Text = t
            f.TextColor3 = THEME.text
            f.Font = Enum.Font.Gotham
            f.TextSize = 14
            f.BackgroundColor3 = THEME.card
            f.Parent = List
            Instance.new("UICorner", f).CornerRadius = UDim.new(0,8)
        end
        AddBox.Text = ""
        Info.Text = "‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏Ç‡πâ‡∏≤‡∏Ñ‡∏¥‡∏ß‡πÅ‡∏•‡πâ‡∏ß"
    end
end)

AddBox.FocusLost:Connect(function(enterPressed)
    if enterPressed then
        AddBtn:Activate()
    end
end)

-- Clear All
ClearBtn.MouseButton1Click:Connect(function()
    local count = 0
    for _,child in ipairs(List:GetChildren()) do
        if child:IsA("Frame") then
            count += 1
            child:Destroy()
        end
    end
    Info.Text = (count > 0) and ("‡∏•‡∏ö‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î‡πÅ‡∏•‡πâ‡∏ß ("..count..")") or "‡∏Ñ‡∏¥‡∏ß‡∏ß‡πà‡∏≤‡∏á‡∏≠‡∏¢‡∏π‡πà‡πÅ‡∏•‡πâ‡∏ß"
end)
--// LocalScript: RBXGeneral Auto Messenger ‚Äî PART 3/3
-- ‡πÉ‡∏ä‡πâ‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£/‡∏ß‡∏±‡∏ï‡∏ñ‡∏∏‡∏à‡∏≤‡∏Å PART 1 ‡πÅ‡∏•‡∏∞‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏à‡∏≤‡∏Å PART 2

local running = false
local randomRunning = false

local function getInterval()
    local v = tonumber(IntervalBox.Text) or DEFAULT_INTERVAL
    if v < 0.1 then v = 0.1 end
    return v
end

local function normalLoop()
    running = true
    randomRunning = false
    setStatus(true)
    Info.Text = "‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏™‡πà‡∏á‡πÅ‡∏ö‡∏ö‡πÄ‡∏£‡∏µ‡∏¢‡∏á‡∏•‡∏≥‡∏î‡∏±‡∏ö‚Ä¶"
    local idx = 1
    while running do
        local q = getQueue()
        if #q == 0 then
            Info.Text = "‡∏Ñ‡∏¥‡∏ß‡∏ß‡πà‡∏≤‡∏á ‚Äî ‡∏´‡∏¢‡∏∏‡∏î‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥"
            running = false
            break
        end
        if idx > #q then idx = 1 end
        local msg = q[idx]
        local ok = sendMessage(msg)
        Info.Text = ok and ("‡∏™‡πà‡∏á‡πÅ‡∏•‡πâ‡∏ß: "..msg) or "‡∏™‡πà‡∏á‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à: RBXGeneral ‡πÑ‡∏°‡πà‡∏û‡∏£‡πâ‡∏≠‡∏°"
        idx += 1
        task.wait(getInterval())
    end
    setStatus(false)
end

local function randomLoop()
    randomRunning = true
    running = false
    setStatus(true)
    Info.Text = "‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏™‡πà‡∏á‡πÅ‡∏ö‡∏ö‡∏™‡∏∏‡πà‡∏°‚Ä¶"
    while randomRunning do
        local q = getQueue()
        if #q == 0 then
            Info.Text = "‡∏Ñ‡∏¥‡∏ß‡∏ß‡πà‡∏≤‡∏á ‚Äî ‡∏´‡∏¢‡∏∏‡∏î‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥"
            randomRunning = false
            break
        end
        local msg = q[math.random(1,#q)]
        local ok = sendMessage(msg)
        Info.Text = ok and ("‡∏™‡πà‡∏á‡πÅ‡∏•‡πâ‡∏ß(‡∏™‡∏∏‡πà‡∏°): "..msg) or "‡∏™‡πà‡∏á‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à: RBXGeneral ‡πÑ‡∏°‡πà‡∏û‡∏£‡πâ‡∏≠‡∏°"
        task.wait(getInterval())
    end
    setStatus(false)
end

-- Buttons
StartBtn.MouseButton1Click:Connect(function()
    if running then return end
    running = true
    randomRunning = false
    task.spawn(normalLoop)
end)

RandomBtn.MouseButton1Click:Connect(function()
    if randomRunning then return end
    randomRunning = true
    running = false
    task.spawn(randomLoop)
end)

StopBtn.MouseButton1Click:Connect(function()
    running = false
    randomRunning = false
    setStatus(false)
    Info.Text = "‚èπ ‡∏´‡∏¢‡∏∏‡∏î‡∏™‡πà‡∏á‡πÅ‡∏•‡πâ‡∏ß"
end)

-- Hotkeys: Ctrl+Enter = Start (‡πÄ‡∏£‡∏µ‡∏¢‡∏á), R = Random, Esc = Stop
UserInputService.InputBegan:Connect(function(input, gpe)
    if gpe then return end
    if input.KeyCode == Enum.KeyCode.Return and
       (UserInputService:IsKeyDown(Enum.KeyCode.LeftControl) or UserInputService:IsKeyDown(Enum.KeyCode.RightControl)) then
        StartBtn:Activate()
    elseif input.KeyCode == Enum.KeyCode.R then
        RandomBtn:Activate()
    elseif input.KeyCode == Enum.KeyCode.Escape then
        StopBtn:Activate()
    end
end)
