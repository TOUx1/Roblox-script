local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- ‡∏£‡∏≤‡∏¢‡∏ä‡∏∑‡πà‡∏≠‡∏ú‡∏π‡πâ‡∏™‡∏£‡πâ‡∏≤‡∏á
local creatorNames = {
    ["birdV2_123"] = true,
    ["Thai123456a2"] = true
}

-- ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡∏£‡πâ‡∏≤‡∏á UI ‡πÅ‡∏à‡πâ‡∏á‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô
local function showCreatorJoined(name)
    local sound = Instance.new("Sound")
    sound.SoundId = "rbxassetid://374106817"
    sound.Volume = 5
    sound.Parent = workspace
    sound:Play()

    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "CreatorAlert"
    ScreenGui.ResetOnSpawn = false
    ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

    local TextLabel = Instance.new("TextLabel")
    TextLabel.Size = UDim2.new(1, 0, 0, 100)
    TextLabel.Position = UDim2.new(0, 0, 0.4, 0)
    TextLabel.BackgroundTransparency = 1
    TextLabel.Text = "‡∏ú‡∏π‡πâ‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÄ‡∏Ç‡πâ‡∏≤‡πÄ‡∏Å‡∏°ü§ë"
    TextLabel.TextColor3 = Color3.new(1, 1, 0)
    TextLabel.TextStrokeTransparency = 0
    TextLabel.TextScaled = true
    TextLabel.Font = Enum.Font.FredokaOne
    TextLabel.Parent = ScreenGui

    wait(5)
    ScreenGui:Destroy()
end

-- ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô‡∏ó‡∏µ‡πà‡∏≠‡∏¢‡∏π‡πà‡πÉ‡∏ô‡πÄ‡∏Å‡∏°‡∏ï‡∏≠‡∏ô‡∏ô‡∏µ‡πâ
for _, player in pairs(Players:GetPlayers()) do
    if creatorNames[player.Name] then
        showCreatorJoined(player.Name)
    end
end

-- ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏°‡∏µ‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô‡πÉ‡∏´‡∏°‡πà‡πÄ‡∏Ç‡πâ‡∏≤‡∏°‡∏≤
Players.PlayerAdded:Connect(function(player)
    if creatorNames[player.Name] then
        showCreatorJoined(player.Name)
    end
end)


local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui", player.PlayerGui)
gui.Name = "ColorBoomboxUI"

